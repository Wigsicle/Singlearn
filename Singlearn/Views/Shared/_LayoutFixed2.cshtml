@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;
@{
    var staffId = HttpContextAccessor.HttpContext.Session.GetString("staff_id");
    var role = HttpContextAccessor.HttpContext.Session.GetString("role");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] SingLearn</title>

    <environment include="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding: 10px 20px;">
        <a class="navbar-brand"><span style="color: #9900FF;font-size: x-large;font-weight: bold;text-shadow: 2px 2px 5px grey;">SingLe</span><span style="color:#4da6e7;font-size: x-large;font-weight: bold;text-shadow: 2px 2px 5px grey;">arn</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="Home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Announcements/Index">Announcement</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="TemplateEditor">Template Editor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="SubjectMaterialChapter" asp-action="IndexMaterials">Materials Editor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/HomeworkHub/staff_subject?teacherId=@staffId">Homework Hub</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" id="profileLogoutdropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="navbar-toggler-icon"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileLogoutdropdown">
                        <a class="dropdown-item" asp-controller="Staff" asp-action="profile">View Profile</a>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="dropdown-item">
                            <button class="btn text-danger p-0" type="submit">Log Out</button>
                        </form>
                    </div>
                </li>
            </ul>
        </div>

        

        @* <form asp-controller="Auth" asp-action="Logout" method="post" class="form-inline my-2 my-lg-0">
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Log Out</button>
        </form> *@
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <p>Copyright © 2024 SingLearn All Rights Reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <environment include="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"
                asp-fallback-src="~/lib/popper.js/dist/umd/popper.min.js"
                crossorigin="anonymous"
                integrity="sha384-eMN7SSx2Jo8eTFqSYxZB47uaIUfF0uOKzV9RlC/7FIkRW6G+ec69e+T6Q9VVhtTL">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                crossorigin="anonymous"
                integrity="sha384-o+RDsa0aLuVVz+9+HG5f8NsZZZZAKp0b2D3VJ0M5k5R1IU1aE4yG0R5L5gE1s/EX">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

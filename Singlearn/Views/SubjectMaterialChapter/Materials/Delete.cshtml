@model Singlearn.Models.Entities.Material

@{
    Layout = "~/Views/Shared/_LayoutFixed2.cshtml";
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Material</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f7f7f9; /* Light pastel background color */
        }

        .main-container {
            padding: 150px;
        }

        .details-container {
            background-color: #ffffff; /* White background for the card */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px; /* Control width */
            margin: auto; /* Center horizontally */
        }

        .details-header {
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .details-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .details-label {
            font-weight: bold;
            color: #333;
        }

        .details-value {
            color: #555;
        }

        .actions {
            margin-top: 20px;
            text-align: center;
        }

            .actions input, .actions a {
                margin: 0 10px;
                color: #fff;
                text-decoration: none;
            }

            .actions a {
                background-color: #007bff;
                padding: 10px 20px;
                border-radius: 5px;
            }

                .actions a:hover {
                    text-decoration: underline;
                }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="details-container">
            <div class="details-header">
                <h1>Delete Material</h1>
                <h4>@Model.name</h4>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.subject_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.subject_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.teacher_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.teacher_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.class_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.class_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.name):</span>
                <span class="details-value">@Html.DisplayFor(model => model.name)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.description):</span>
                <span class="details-value">@Html.DisplayFor(model => model.description)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.chapter_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.chapter_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.type):</span>
                <span class="details-value">@Html.DisplayFor(model => model.type)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.link):</span>
                <span class="details-value">@Html.DisplayFor(model => model.link)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.status):</span>
                <span class="details-value">@Html.DisplayFor(model => model.status)</span>
            </div>
            <div class="actions">
                <form asp-action="DeleteConfirmedMaterial" method="post" asp-route-id="@Model.material_id">
                    <input type="hidden" asp-for="material_id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="IndexMaterials" asp-controller="SubjectMaterialChapter" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

@model Singlearn.Models.Entities.Material

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div style="padding: 15% 3% 3% 3%;">
                <h2>Materials Details</h2>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.subject_id)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.subject_id)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.teacher_id)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.teacher_id)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.class_id)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.class_id)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.name)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.description)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.description)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.chapter_id)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.chapter_id)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.type)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.type)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.link)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.link)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.status)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.status)
                    </dd>
                </dl>
                 <div class="form-group mt-3 mb-3">
                            <a asp-action="EditMaterial" asp-controller="SubjectMaterialChapter" asp-route-id="@Model.material_id" class="btn btn-warning"><i class="fa fa-pencil"></i> Edit</a>
                            <a asp-action="IndexMaterials" asp-controller="SubjectMaterialChapter" class="btn btn-secondary">Back to List</a>
                  </div>
              </div>
         </div>
    </div>
</div>
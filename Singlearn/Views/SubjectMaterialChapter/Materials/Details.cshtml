@model Singlearn.Models.Entities.Material

@{
    Layout = "~/Views/Shared/_LayoutFixed2.cshtml";
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Details - Material</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f7f7f9; /* Light pastel background color */
        }

        .main-container {
            padding: 150px;
        }

        .details-container {
            background-color: #ffffff; /* White background for the card */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px; /* Control width */
            margin: auto; /* Center horizontally */
        }

        .details-header {
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .details-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .details-label {
            font-weight: bold;
            color: #333;
        }

        .details-value {
            color: #555;
        }

        .actions {
            margin-top: 20px;
            text-align: center;
        }

            .actions a {
                margin: 0 10px;
                color: #007bff;
                text-decoration: none;
            }

                .actions a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="details-container">
            <div class="details-header">
                <h1>Material Details</h1>
            </div>
            <div class="details-section">
                <span class="details-label">Subject ID:</span>
                <span class="details-value">@Html.DisplayFor(model => model.subject_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Teacher ID:</span>
                <span class="details-value">@Html.DisplayFor(model => model.teacher_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Class ID:</span>
                <span class="details-value">@Html.DisplayFor(model => model.class_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Material Name:</span>
                <span class="details-value">@Html.DisplayFor(model => model.name)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Description:</span>
                <span class="details-value">@Html.DisplayFor(model => model.description)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Chapter:</span>
                <span class="details-value">@Html.DisplayFor(model => model.chapter_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Material Type:</span>
                <span class="details-value">@Html.DisplayFor(model => model.type)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Video Link:</span>
                <span class="details-value">@Html.DisplayFor(model => model.link)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Visibility:</span>
                <span class="details-value">@Html.DisplayFor(model => model.status)</span>
            </div>
            <div class="actions">
                <a asp-action="EditMaterial" asp-controller="SubjectMaterialChapter" asp-route-id="@Model.material_id">Edit</a> |
                <a asp-action="IndexMaterials" asp-controller="SubjectMaterialChapter">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

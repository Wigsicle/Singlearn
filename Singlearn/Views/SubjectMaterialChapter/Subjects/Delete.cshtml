@model Singlearn.Models.Entities.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div style="padding: 15% 3% 3% 3%;">
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        Subject Name
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class="col-sm-4">
                        Year
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.year)
                    </dd>
                    <dt class="col-sm-4">
                        Academic Level
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.academic_level)
                    </dd>
                    <dt class="col-sm-4">
                        No. of Chapters
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.no_chapters)
                    </dd>
                    <dt class="col-sm-4">
                        Image
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.image)
                    </dd>
                </dl>
                <div>
                    <form asp-action="DeleteConfirmedSubject" method="post" asp-route-id="@Model.subject_id">
                        <input type="hidden" asp-for="subject_id" />
                        <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Delete</button>
                        <a class="btn btn-secondary" asp-action="IndexSubjects" asp-controller="SubjectMaterialChapter">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model Singlearn.Models.Entities.ChapterName

@{
    Layout = "~/Views/Shared/_LayoutFixed2 - Copy.cshtml";
    ViewData["Title"] = "Chapter Name Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chapter Name Details</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f7f7f9; /* Light pastel background color */
        }

        .main-container {
            padding: 150px;
        }

        .details-container {
            background-color: #ffffff; /* White background for the card */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px; /* Control width */
            margin: auto; /* Center horizontally */
        }

        .details-header {
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .btn-edit {
            background-color: #ffc107; /* Yellow background for Edit button */
            color: #000; /* Black text color for better contrast */
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #e0a800; /* Darker yellow for hover effect */
            }

        .btn-back {
            background-color: #6c757d; /* Secondary background color for Back to List button */
            color: #fff; /* White text color */
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            .btn-back:hover {
                background-color: #5a6268; /* Darker gray for hover effect */
            }

        .details-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .details-label {
            font-weight: bold;
            color: #333;
        }

        .details-value {
            color: #555;
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .actions {
            margin-top: 20px;
            text-align: center;
        }

            .actions a {
                margin: 0 10px;
                color: #007bff;
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
            }

                .actions a.edit-btn {
                    background-color: #ffc107; /* Yellow background for Edit button */
                    color: #000; /* Black text color for better contrast */
                }

                    .actions a.edit-btn:hover {
                        background-color: #e0a800; /* Darker yellow for hover effect */
                    }

                .actions a.back-btn {
                    background-color: #6c757d; /* Secondary background color for Back to List button */
                    color: #fff; /* White text color */
                }

                    .actions a.back-btn:hover {
                        background-color: #5a6268; /* Darker gray for hover effect */
                    }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="details-container">
            <div class="details-header">
                <h1>Chapter Name Details</h1>
                <h4>@Model.name</h4>
            </div>
            <div class="details-section">
                <span class="details-label">Chapter ID:</span>
                <span class="details-value">@Html.DisplayFor(model => model.chapter_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">Subject ID:</span>
                <span class="details-value">@Html.DisplayFor(model => model.subject_id)</span>
            </div>

            <div class="actions">
                <a asp-action="EditChapterName" asp-controller="SubjectMaterialChapter" asp-route-id="@Model.chapter_name_id" class="edit-btn">Edit</a>
                <a asp-action="IndexChapterNames" asp-controller="SubjectMaterialChapter" class="back-btn">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

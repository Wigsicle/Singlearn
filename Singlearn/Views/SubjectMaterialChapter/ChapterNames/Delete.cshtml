@model Singlearn.Models.Entities.ChapterName

@{
    Layout = "~/Views/Shared/_LayoutFixed2 - Copy.cshtml";
    ViewData["Title"] = "Delete";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div style="padding: 15% 3% 3% 3%;">
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.name)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.chapter_id)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.chapter_id)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.subject_id)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.subject_id)
                    </dd>
                </dl>
                <div>
                    <br />
                    <form asp-action="DeleteConfirmedChapterName" method="post" asp-route-id="@Model.chapter_name_id">
                        <input type="hidden" asp-for="chapter_name_id" />
                        <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Delete</button>
                        <a class="btn btn-secondary" asp-action="IndexChapterNames" asp-controller="SubjectMaterialChapter">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


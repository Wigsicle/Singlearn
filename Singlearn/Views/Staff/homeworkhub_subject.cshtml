

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["StaffTitle"] = "Homepage";
}

@using Singlearn.Models.Entities
@model List<Singlearn.ViewModels.SubjectViewModel>


<!-- Content wrapper -->

<div style="padding-top: 110px;" class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Assignment /</span> Subject</h4>
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var subject in Model)
                {
                    <div class="col-md-6 col-lg-3 padding-bottom-20">
                        <a href="javascript:void(0)" class="card-link">
                            <div class="card mb-2 card-hover-effect">
                                <img class="card-img-top card-img-custom" src="@subject.image" alt="Card image cap" />
                                <div class="card-body">
                                    <h5 class="card-title fw-bold py-3 mb-2">@subject.academic_level @subject.year @subject.name (@subject.class_id)</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No subjects found for this staff.</p>
        }


@{
    Layout = "~/Views/Shared/_layoutFixed2.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center" style="padding-top: 100px;">
    <div class="col-md-8">
        <div class="p-3 py-5">
            <div class="d-flex justify-content-center mb-3">
                <h3>Profile</h3>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label class="labels">Staff ID:</label>
                    <input type="text" class="form-control" value="@Model.staff_id" disabled>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label class="labels">Staff Name:</label>
                    <input type="text" class="form-control" value="@Model.name" disabled>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label class="labels">Contact Number:</label>
                    <input type="text" class="form-control" value="@Model.contact_no" disabled>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label class="labels">Classes:</label>
                    <input type="text" class="form-control" value="@string.Join(", ", Model.classes)" disabled>
                </div>
            </div>
        </div>
    </div>
</div>

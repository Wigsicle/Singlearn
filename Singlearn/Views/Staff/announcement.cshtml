@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["StudentTitle"] = "Homepage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Announcement Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://kit.fontawesome.com/a076d05399.js" rel="stylesheet">
    <style>
        .action-icons {
            font-size: 1.2em;
            cursor: pointer;
            display: inline-block;
            margin: 0 2px;
        }

        .main-content {
            margin-top: 120px;
            max-width: calc(100% - 300px);
            margin-left: 150px;
            margin-right: 50px;
        }

        .input-group {
            flex-grow: 1;
            justify-content: center;
            margin: 0 auto;
            max-width: 600px;
        }

        .add-button {
            margin-left: 20px;
        }

        .table-container table td.description {
            max-width: 300px; /* Adjust max-width as needed */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Initially hide the Subject Type field */
        .subject-type-field {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container main-content">
        <div class="text-center mb-5">
            <h1 class="display-4"><b>Announcement Page</b></h1>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa fa-search"></i>
                </span>
                <input type="text" class="form-control" placeholder="Search..." aria-label="Search...">
                <button class="btn btn-primary add-button" type="button" data-toggle="modal" data-target="#addAnnouncementModal">
                    Add Announcement
                </button>
            </div>
        </div>

        <div class="card mb-5">
            <div class="table-responsive table-container">
                <table class="table table-bordered table-striped text-center table-responsive-md">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th style="width: 125px;">Date Uploaded</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Image</th>
                            <th>Subject Type</th>
                            <th style="width: 100px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var announcement in Model)
                        {
                            <tr>
                                <td>@announcement.announcement_id</td>
                                <td>@announcement.title</td>
                                <td class="description">@announcement.description</td>
                                <td>@announcement.date.ToShortDateString()</td>
                                <td>@announcement.category</td>
                                <td><b>@announcement.Status</b></td>
                                <td>
                                    <img src="@Url.Content("~/uploads/" + announcement.image)" alt="Image" class="rounded-circle" style="max-width: 100px; max-height: 100px;" />
                                </td>
                                <td>@announcement.SubjectType</td>
                                <td>
                                    <i class="fa fa-eye action-icons" title="View" data-toggle="modal" data-target="#viewModal" data-content="@announcement.description"></i>
                                    <i class="fa fa-edit action-icons" title="Edit" data-toggle="modal" data-target="#editModal" data-id="@announcement.announcement_id"></i>
                                    <i class="fa fa-trash action-icons" title="Delete" data-toggle="modal" data-target="#deleteModal" data-id="@announcement.announcement_id"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modals for View, Edit, and Delete -->
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">View Announcement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="viewContent"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Announcement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editAnnouncementForm">
                        <div class="form-group">
                            <label for="editAnnouncementTitle">Title</label>
                            <input type="text" class="form-control" id="editAnnouncementTitle" placeholder="Enter Title">
                        </div>
                        <div class="form-group">
                            <label for="editAnnouncementDescription">Description</label>
                            <textarea class="form-control" id="editAnnouncementDescription" rows="3" placeholder="Enter Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="editAnnouncementType">Type</label>
                            <select class="form-control" id="editAnnouncementType">
                                <option value="News">News</option>
                                <option value="Events">Events</option>
                                <option value="Subject">Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="editAnnouncementStatus">Status</label>
                            <select class="form-control" id="editAnnouncementStatus">
                                <option>Visible</option>
                                <option>Hidden</option>
                            </select>
                        </div>
                        <div class="form-group subject-type-field" id="editSubjectTypeField">
                            <label for="editSubjectType">Subject Type</label>
                            <input type="text" class="form-control" id="editSubjectType" placeholder="Enter Subject Type">
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Announcement</h5>
                    <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="deleteContent" style="color: black;"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="confirmDeleteBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Add Announcement Modal -->
    <div class="modal fade" id="addAnnouncementModal" tabindex="-1" role="dialog" aria-labelledby="addAnnouncementModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAnnouncementModalLabel">Add Announcement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="announcementTitle">Title</label>
                            <input type="text" class="form-control" id="announcementTitle" placeholder="Enter Title">
                        </div>
                        <div class="form-group">
                            <label for="announcementDescription">Description</label>
                            <textarea class="form-control" id="announcementDescription" rows="3" placeholder="Enter Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="announcementType">Type</label>
                            <select class="form-control" id="announcementType" onchange="toggleSubjectTypeField()">
                                <option value="News">News</option>
                                <option value="Events">Events</option>
                                <option value="Subject">Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="announcementStatus">Status</label>
                            <select class="form-control" id="announcementStatus">
                                <option>Visible</option>
                                <option>Hidden</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="announcementImage">Image</label>
                            <input type="file" class="form-control-file" id="announcementImage">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        $('#viewModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var content = button.data('content');
            var modal = $(this);
            modal.find('.modal-body #viewContent').text(content);
        });

            // Make the Add Announcement modal fields match the table
            $('#addAnnouncementForm').on('submit', function (e) {
                e.preventDefault();
                // Collect data from form (for now, we just log it)
                var formData = {
                    title: $('#announcementTitle').val(),
                    description: $('#announcementDescription').val(),
                    date: $('#announcementDate').val(),
                    type: $('#announcementType').val(),
                    status: $('input[name="status"]:checked').val(),
                    subjectType: $('#subjectType').val(),
                    image: $('#uploadImage').val().split('\\').pop() // Get the file name only
                };
                console.log(formData);
                // Close the modal
                $('#addAnnouncementModal').modal('hide');
            });

            $('#editAnnouncementForm').on('submit', function (e) {
                e.preventDefault();
                // Collect updated data
                var formData = {
                    title: $('#editAnnouncementTitle').val(),
                    description: $('#editAnnouncementDescription').val(),
                    type: $('#editAnnouncementType').val(),
                    status: $('#editAnnouncementStatus').val(),
                    subjectType: $('#editSubjectType').val()
                };
                console.log(formData);
                // Close the modal
                $('#editModal').modal('hide');
            });
        });

        $('#addAnnouncementType, #editAnnouncementType').on('change', function () {
            var selectedType = $(this).val();
            if (selectedType === "Subject") {
                $(this).closest('form').find('.subject-type-field').show();
            } else {
                $(this).closest('form').find('.subject-type-field').hide();
            }
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var modal = $(this);
            modal.find('#deleteContent').text('Are you sure you want to delete announcement with ID ' + id + '?');
            $('#confirmDeleteBtn').data('id', id);
        });

            // Handle Confirm button click
            $('#confirmDeleteBtn').on('click', function () {
                // Add your implementation for delete functionality here
                console.log('Delete confirmed'); // Example: Log message
                $('#deleteModal').modal('hide'); // Close modal after confirmation
            });
        });
    </script>
</body>
</html>

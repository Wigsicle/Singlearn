@model IEnumerable<Singlearn.Models.Entities.Announcement>

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["StudentTitle"] = "Homepage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Announcement Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://kit.fontawesome.com/a076d05399.js" rel="stylesheet">
    <style>
        /* Existing styles */
        .action-icons {
            font-size: 1.2em;
            cursor: pointer;
            display: inline-block; /* Ensure icons are inline */
            margin: 0 2px; /* Add margin between icons */
        }

        .main-content {
            margin-top: 120px;
            max-width: calc(100% - 300px);
            margin-left: 150px;
            margin-right: 50px;
        }

        .input-group {
            flex-grow: 1;
            justify-content: center;
            margin: 0 auto;
            max-width: 600px;
        }

        .add-button {
            margin-left: 20px;
        }

        .table-container table td.description {
            max-width: 300px; /* Adjust max-width as needed */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Initially hide the Subject Type field */
        .subject-type-field {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container main-content">
        <div class="text-center mb-5">
            <h1 class="display-4"><b>Announcement Page</b></h1>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa fa-search"></i>
                </span>
                <input type="text" class="form-control" placeholder="Search..." aria-label="Search...">
                <button class="btn btn-primary add-button" type="button" data-toggle="modal" data-target="#addAnnouncementModal">
                    Add Announcement
                </button>
            </div>
        </div>

        <div class="card mb-5">
            <div class="table-responsive table-container">
                <table class="table table-bordered table-striped text-center table-responsive-md">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th style ="width: 125px;">Date Uploaded</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Image</th>
                            <th>Subject Type</th>
                            <th style="width: 100px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var announcement in Model)
                        {
                            <tr>
                                <td>@announcement.announcement_id</td>
                                <td>@announcement.title</td>
                                <td class="description">@announcement.description</td>
                                <td>@announcement.date.ToShortDateString()</td>
                                <td>@announcement.category</td>
                                <td><b>@announcement.Status</b></td>
                                <td>
                                    <img src="@Url.Content("~/uploads/" + announcement.image)" alt="Image" class="rounded-circle" style="max-width: 100px; max-height: 100px;" />
                                </td>
                                <td>@announcement.SubjectType</td>
                                <td>
                                    <i class="fa fa-eye action-icons" title="View" data-toggle="modal" data-target="#viewModal" data-content="@announcement.description"></i>
                                    <i class="fa fa-edit action-icons" title="Edit" data-toggle="modal" data-target="#editModal" data-id="@announcement.announcement_id"></i>
                                    <i class="fa fa-trash action-icons" title="Delete" data-toggle="modal" data-target="#deleteModal" data-id="@announcement.announcement_id"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modals for View, Edit, and Delete -->
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">View Announcement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="viewContent"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Announcement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editAnnouncementForm">
                        <input type="hidden" id="editAnnouncementId" />
                        <div class="form-group">
                            <label for="editAnnouncementTitle">Title</label>
                            <input type="text" class="form-control" id="editAnnouncementTitle" placeholder="Enter Title">
                        </div>
                        <div class="form-group">
                            <label for="editAnnouncementDescription">Description</label>
                            <textarea class="form-control" id="editAnnouncementDescription" rows="3" placeholder="Enter Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="editAnnouncementType">Type</label>
                            <select class="form-control" id="editAnnouncementType">
                                <option value="News">News</option>
                                <option value="Events">Events</option>
                                <option value="Subject">Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="editAnnouncementStatus">Status</label>
                            <select class="form-control" id="editAnnouncementStatus">
                                <option>Visible</option>
                                <option>Hidden</option>
                            </select>
                        </div>
                        <div class="form-group subject-type-field" id="editSubjectTypeField">
                            <label for="editSubjectType">Subject Type</label>
                            <input type="text" class="form-control" id="editSubjectType" placeholder="Enter Subject Type">
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Announcement</h5>
                    <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="deleteContent" style="color: black;"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="confirmDeleteBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Announcement Modal -->
    <div class="modal fade" id="addAnnouncementModal" tabindex="-1" role="dialog" aria-labelledby="addAnnouncementModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAnnouncementModalLabel">Add Announcement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addAnnouncementForm" enctype="multipart/form-data" method="post" action="/Staff/CreateAnnouncement">
                        <div class="form-group">
                            <label for="addAnnouncementTitle">Title</label>
                            <input type="text" class="form-control" id="addAnnouncementTitle" name="title" placeholder="Enter Title" required>
                        </div>
                        <div class="form-group">
                            <label for="addAnnouncementDescription">Description</label>
                            <textarea class="form-control" id="addAnnouncementDescription" name="description" rows="3" placeholder="Enter Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="addAnnouncementType">Type</label>
                            <select class="form-control" id="addAnnouncementType" name="category" required>
                                <option value="News">News</option>
                                <option value="Events">Events</option>
                                <option value="Subject">Subject</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="addAnnouncementStatus">Status</label>
                            <select class="form-control" id="addAnnouncementStatus" name="Status" required>
                                <option value="Visible">Visible</option>
                                <option value="Hidden">Hidden</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="addAnnouncementImage">Image</label>
                            <input type="file" class="form-control-file" id="addAnnouncementImage" name="image" accept="image/*" required>
                        </div>
                        <div class="form-group subject-type-field" id="addSubjectTypeField">
                            <label for="addSubjectType">Subject Type</label>
                            <input type="text" class="form-control" id="addSubjectType" name="SubjectType" placeholder="Enter Subject Type">
                        </div>
                        <button type="submit" class="btn btn-primary">Add Announcement</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $('#viewModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var content = button.data('content');
            var modal = $(this);
            modal.find('.modal-body #viewContent').text(content);
        });

        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');

            // Fetch data using AJAX and fill in the form fields
            $.ajax({
                url: '/Staff/GetAnnouncementById/' + id,
                type: 'GET',
                success: function (data) {
                    $('#editAnnouncementId').val(data.announcement_id);
                    $('#editAnnouncementTitle').val(data.title);
                    $('#editAnnouncementDescription').val(data.description);
                    $('#editAnnouncementType').val(data.category);
                    $('#editAnnouncementStatus').val(data.Status);
                    if (data.category === "Subject") {
                        $('#editSubjectTypeField').show();
                        $('#editSubjectType').val(data.SubjectType);
                    } else {
                        $('#editSubjectTypeField').hide();
                    }
                }
            });
        });

        $('#addAnnouncementType, #editAnnouncementType').on('change', function () {
            var selectedType = $(this).val();
            if (selectedType === "Subject") {
                $(this).closest('form').find('.subject-type-field').show();
            } else {
                $(this).closest('form').find('.subject-type-field').hide();
            }
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var modal = $(this);
            modal.find('#deleteContent').text('Are you sure you want to delete announcement with ID ' + id + '?');
            $('#confirmDeleteBtn').data('id', id);
        });

        $('#confirmDeleteBtn').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '/Staff/DeleteAnnouncement/' + id,
                type: 'POST',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (result) {
                    location.reload();
                }
            });
        });
    </script>
</body>
</html>

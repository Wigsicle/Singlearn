@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Template Editor";
    var teacherId = Context.Request.Query["teacherId"].ToString(); // Get teacherId from the query string
}

<!DOCTYPE html>
<html>
<head>
    <title>Template Editor</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .header {
            margin-top: 120px;
            text-align: center;
        }

        .centered-form {
            max-width: 600px;
            margin: auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        #templatePreview {
            width: 100%;
            height: 600px; /* Fixed height to avoid pushing content */
            background-color: #f8f9fa; /* Light grey background */
            padding: 10px;
            border: 1px solid #ddd;
            overflow-y: auto; /* Allow scrolling if content overflows */
        }

        .container-flex {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-wrap: wrap;
        }

        .form-container, .preview-container {
            flex: 1;
            min-width: 800px; /* Ensure containers don't shrink too small */
            margin: 10px;
        }
    </style>
</head>
<body>
    <h1 class="header">Template Editor</h1>
    <div class="container main-body">
        <div class="container-flex">
            <div class="form-container centered-form">
                <input type="hidden" id="teacherId" value="@teacherId" />
                <div class="form-group">
                    <label for="subjectSelect">Select Subject:</label>
                    <select id="subjectSelect" class="form-control">
                        <option value="">--Select a Subject--</option>
                        @foreach (var subject in ViewBag.Subjects)
                        {
                            <option value="@subject.subject_id">@subject.name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="classSelect">Select Class:</label>
                    <select id="classSelect" class="form-control">
                        <option value="">--Select a Class--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="templateSelect">Select Template:</label>
                    <select id="templateSelect" class="form-control">
                        <option value="">--Select a Template--</option>
                        @foreach (var template in ViewBag.Templates)
                        {
                            <option value="@template.template_id">@template.name</option>
                        }
                    </select>
                </div>
                <button id="saveTemplate" class="btn btn-primary btn-block">Save Template</button>
            </div>
            <div class="preview-container" id="templatePreview">
                <p class="text-center">Please select a template to preview.</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var teacherId = $('#teacherId').val(); // Get the teacherId from the hidden input

            $('#subjectSelect').change(function () {
                var subjectId = $(this).val();
                if (subjectId) {
                    $.get('/Staff/GetClassesForSubject', { subjectId: subjectId, teacherId: teacherId }, function (data) {
                        var classSelect = $('#classSelect');
                        classSelect.empty();
                        classSelect.append('<option value="">--Select a Class--</option>');
                        $.each(data, function (index, item) {
                            classSelect.append('<option value="' + item.class_id + '">' + item.name + '</option>');
                        });
                    });
                } else {
                    $('#classSelect').empty();
                    $('#classSelect').append('<option value="">--Select a Class--</option>');
                }
            });

            $('#templateSelect').change(function () {
                var templateId = $(this).val();
                var subjectId = $('#subjectSelect').val();
                var classId = $('#classSelect').val();
                if (templateId && subjectId && classId) {
                    $.get('/Staff/LoadTemplatePreview', { templateId: templateId, subjectId: subjectId, classId: classId }, function (data) {
                        $('#templatePreview').html(data);
                    }).fail(function () {
                        $('#templatePreview').html('<p class="text-center text-danger">Error loading template preview.</p>');
                    });
                } else {
                    $('#templatePreview').html('<p class="text-center">Please select a template to preview.</p>');
                }
            });

            $('#saveTemplate').click(function () {
                var subjectId = $('#subjectSelect').val();
                var classId = $('#classSelect').val();
                var templateId = $('#templateSelect').val();
                if (subjectId && classId && templateId) {
                    $.post('/Staff/SaveTemplateSelection', { subjectId: subjectId, classId: classId, templateId: templateId }, function () {
                        alert('Template saved successfully!');
                    }).fail(function () {
                        alert('Error saving template.');
                    });
                } else {
                    alert('Please select a subject, a class, and a template.');
                }
            });
        });
    </script>
</body>
</html>

@{
    Layout = "~/Views/Shared/_LayoutFixed2 - Copy.cshtml";
    ViewData["StaffTitle"] = "Homepage";
}
@using Singlearn.ViewModels
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;
@{
    var staffId = HttpContextAccessor.HttpContext.Session.GetString("staff_id");
}

<div class="container-fluid">
    <!-- Crud Display -->
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <h1 class="fw-bold py-3 mb-2">Tools</h1>
        </div>

            <div class="col-lg-10 offset-lg-1">
                <div class="row">
                        <div class="col-lg-3 padding-bottom-20">
                    <a asp-controller="SubjectMaterialChapter" asp-action="IndexSubjects" class="card-link no-underline">

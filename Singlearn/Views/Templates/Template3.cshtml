@model Singlearn.ViewModels.SubjectViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Template 3</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .link-panel a {
            display: block;
            color: #007bff;
            text-decoration: none;
            padding: 10px 0;
            width: 300px;
        }

            .link-panel a:hover {
                text-decoration: underline;
            }

        .card {
            margin-bottom: 20px;
        }

        .link-panel {
            margin-bottom: 20px;
        }

        .card-hover-effect {
            overflow: hidden;
            position: relative;
            border-radius: 0.5rem;
            transition: transform 0.25s ease-in-out;
        }

            .card-hover-effect:hover {
                transform: scale(1.05);
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            }

        .padding-bottom-20 {
            padding-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-success">@Model.name - @Model.class_id</h2>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card link-panel">
                    <div class="card-body">
                        <h5 class="card-title">Link Panel</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><a href="/">Home</a></li>
                            <li class="list-group-item"><a href="/">Subjects</a></li>
                            <li class="list-group-item"><a href="/">Announcements</a></li>
                            <li class="list-group-item"><a href="/">Homework Hub</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Subject Announcements</h5>
                        @if (Model.Announcements != null && Model.Announcements.Any())
                        {
                            foreach (var announcement in Model.Announcements)
                            {
                                <div class="announcement-item">
                                 @*  <h6>@announcement.Title</h6>
                                    <p>@announcement.Content</p> *@
                                </div>
                            }
                        }
                        else
                        {
                            <p>No announcements available.</p>
                        }
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Subject Chapters</h5>
                        <div class="row">
                            @if (Model.Chapters != null && Model.Chapters.Any())
                            {
                                <div class="row">
                                    @foreach (var chapter in Model.Chapters)
                                    {
                                        <div class="col-md-6 col-lg-3 padding-bottom-20">
                                            <a asp-controller="Staff" asp-action="MaterialsBySubject" asp-route-subject_id="@chapter.subject_id" asp-route-chapter_id="@chapter.chapter_id" asp-route-class_id="@Model.class_id" class="card-link">
                                                <div class="card mb-2 card-hover-effect">
                                                    <div class="card-body">
                                                        <h5 class="card-title fw-bold py-3 mb-2">Chapter @chapter.chapter_id: @chapter.name</h5>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p>No chapters found.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

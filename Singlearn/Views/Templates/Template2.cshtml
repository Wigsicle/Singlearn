@model Singlearn.ViewModels.SubjectViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Template 2</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-hover-effect {
            overflow: hidden;
            position: relative;
            border-radius: 0.5rem;
            transition: transform 0.25s ease-in-out;
        }

            .card-hover-effect:hover {
                transform: scale(1.05); /* Increase size on hover */
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Optional: Add shadow on hover */
            }

        .padding-bottom-20 {
            padding-bottom: 20px;
        }

        .announcement-item {
            margin-bottom: 30px;
        }

            .announcement-item img {
                max-width: 100%;
                height: auto;
                margin-top: 10px;
            }

        .announcement-meta {
            font-size: 0.9rem;
            color: gray;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="jumbotron">
            <h2 class="display-4">@ViewData["SubjectName"] - @Model?.class_id</h2>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Link Panel</h5>
                <div class="list-group">
                    <a href="/" class="list-group-item list-group-item-action">Home</a>
                    <a href="/" class="list-group-item list-group-item-action">Subjects</a>
                    <a href="/" class="list-group-item list-group-item-action">Announcements</a>
                    <a href="/" class="list-group-item list-group-item-action">Homework Hub</a>
                </div>
            </div>
        </div>
        <div class="alert alert-info mt-3" role="alert">
            <h5 class="alert-heading">Subject Announcements</h5>
            <div id="announcement-container">
                @if (Model?.Announcements != null && Model.Announcements.Any())
                {
                    <div class="announcement-item">
                        <h4>@Model.Announcements.First().title</h4>
                        <p class="announcement-meta">
                            @ViewData["StaffName"] posted on @Model.Announcements.First().date.ToString("MMMM dd, yyyy h:mm tt")
                        </p>
                        <p>@Model.Announcements.First().description</p>
                        @if (!string.IsNullOrEmpty(Model.Announcements.First().image))
                        {
                            <img src="@Model.Announcements.First().image" />
                        }
                    </div>
                }
                else
                {
                    <p>No announcements available.</p>
                }
            </div>
            @if (Model?.Announcements != null && Model.Announcements.Count > 1)
            {
                <button id="viewMoreBtn" class="btn btn-primary">View More</button>
            }
        </div>
        <div class="alert alert-warning mt-3" role="alert">
            <h5 class="alert-heading">Subject Chapters</h5>
            <div class="row">
                @if (Model?.Chapters != null && Model.Chapters.Any())
                {
                    <div class="row">
                        @foreach (var chapter in Model.Chapters)
                        {
                            <div class="col-md-6 col-lg-3 padding-bottom-20">
                                <a asp-controller="Staff" asp-action="MaterialsBySubject" asp-route-subject_id="@chapter.subject_id" asp-route-chapter_id="@chapter.chapter_id" asp-route-class_id="@ViewData["ClassId"]" class="card-link">
                                    <div class="card mb-2 card-hover-effect">
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold py-3 mb-2">Chapter @chapter.chapter_id: @chapter.name</h5>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No chapters found.</p>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var announcements = @Html.Raw(Json.Serialize(Model?.Announcements?.Skip(1)?.ToList() ?? new List<Singlearn.Models.Entities.Announcement>()));
            var currentIndex = 0;
            $('#viewMoreBtn').click(function () {
                var nextAnnouncements = announcements.slice(currentIndex, currentIndex + 2);
                currentIndex += 2;
                nextAnnouncements.forEach(function (announcement) {
                    $('#announcement-container').append(
                        `<div class="announcement-item">
                                    <h4>${announcement.title}</h4>
                                    <p class="announcement-meta">
                                        ${'@ViewData["StaffName"]'} posted on ${new Date(announcement.date).toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', hour12: true })}
                                    </p>
                                    <p>${announcement.description}</p>
                                    ${announcement.image ? `<img src="${announcement.image}" />` : ''}
                                </div>`
                    );
                });
                if (currentIndex >= announcements.length) {
                    $('#viewMoreBtn').hide();
                }
            });
        });
    </script>
</body>
</html>

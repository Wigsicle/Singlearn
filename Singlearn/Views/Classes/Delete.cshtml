@model Singlearn.Models.Entities.Class

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div style="padding: 15% 3% 3% 3%;">
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        Class Name
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class="col-sm-4">
                        Teacher Id
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.teacher_id)
                    </dd>
                    <dt class="col-sm-4">
                        Academic Level
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.academic_level)
                    </dd>
                    <dt class="col-sm-4">
                        Year
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.year)
                    </dd>
                </dl>
                <div class="pt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="class_id" />
                        <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Delete</button>
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model Singlearn.Models.Entities.SubjectTeacherClass

@{
    Layout = "~/Views/Shared/_LayoutFixed2 - Copy.cshtml";
    ViewData["Title"] = "Delete Subject Teacher Class";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div style="padding: 15% 3% 3% 3%;">
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        Subject ID
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.subject_id)
                    </dd>
                    <dt class="col-sm-4">
                        Teacher ID
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.teacher_id)
                    </dd>
                    <dt class="col-sm-4">
                        Class ID
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.class_id)
                    </dd>
                </dl>
                <div>
                    <br />
                    <form asp-action="Delete" method="post" asp-route-id="@Model.stc_id">
                        <input type="hidden" asp-for="stc_id" />
                        <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Delete</button>
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

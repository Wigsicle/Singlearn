@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["StaffTitle"] = "Homepage";
}

<!-- Content wrapper -->
<div style="padding-top: 110px;" class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y" style="width:200%">
        <h1 class="fw-bold py-3 mb-2">Homeworks</h1>

        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalCenter"> Add </button>
            <!-- Modal -->
            <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Create</h5>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="nameWithTitle" class="form-label">Name</label>
                                    <input type="text"
                                           id="nameWithTitle"
                                           class="form-control"
                                           placeholder="Enter Name" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="subjectWithTitle" class="form-label">Subject</label>
                                    <select class="form-control" id="subjectWithTitle">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-3">
                                    <label for="formFile" class="form-label">Attachment</label>
                                    <input class="form-control" type="file" id="formFile" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="descriptionWithTitle" class="form-label">Description</label>
                                    <textarea class="form-control" id="descriptionWithTitle" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col mb-0">
                                    <label for="emailWithTitle" class="form-label">Start</label>
                                    <input type="date"
                                           id="emailWithTitle"
                                           class="form-control"
                                           placeholder="xxxx@xxx.xx" />
                                </div>
                                <div class="col mb-0">
                                    <label for="dobWithTitle" class="form-label">End</label>
                                    <input type="date"
                                           id="dobWithTitle"
                                           class="form-control"
                                           placeholder="DD / MM / YY" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Close
                            </button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="editmodalCenter" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Create</h5>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="nameWithTitle" class="form-label">Name</label>
                                    <input type="text"
                                           id="nameWithTitle"
                                           class="form-control"
                                           placeholder="Enter Name" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="subjectWithTitle" class="form-label">Subject</label>
                                    <select class="form-control" id="subjectWithTitle">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-3">
                                    <label for="formFile" class="form-label">Attachment</label>
                                    <input class="form-control" type="file" id="formFile" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="descriptionWithTitle" class="form-label">Description</label>
                                    <textarea class="form-control" id="descriptionWithTitle" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col mb-0">
                                    <label for="emailWithTitle" class="form-label">Start</label>
                                    <input type="date"
                                           id="emailWithTitle"
                                           class="form-control"
                                           placeholder="xxxx@xxx.xx" />
                                </div>
                                <div class="col mb-0">
                                    <label for="dobWithTitle" class="form-label">End</label>
                                    <input type="date"
                                           id="dobWithTitle"
                                           class="form-control"
                                           placeholder="DD / MM / YY" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Close
                            </button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Homework</th>
                        <th>Total Submission</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    <tr>
                        <td><a href="~/HomeworkHub/staff_class"><strong>Angular Project</strong></a></td>
                        <td>100</td>
                        <td><span class="badge bg-label-danger me-1">Closed</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-toggle="dropdown">
                                    <i class="fa fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editmodalCenter"><i class="fa fa-edit me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="fa fa-trash-o me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--/ Basic Bootstrap Table -->
    </div>
</div>
<!-- / Content -->

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["StaffTitle"] = "Homepage";
    int subjectId = ViewData["SubjectId"] != null ? (int)ViewData["SubjectId"] : 0;

}

@model List<Singlearn.ViewModels.HomeworkViewModel>

<!-- Content wrapper -->
<div style="padding-top: 110px;" class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Assignment / Subject / </span> Homework</h4>

        <h2>Homeworks for Subject ID: @ViewData["SubjectId"]</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="d-flex justify-content-end">
            <div>
                <a href="~/HomeworkHub/Create?subjectId=@ViewData["SubjectId"]" class="btn btn-primary mb-3"> Create new homework </a>
            </div>
        </div>
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Homework ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Start Date</th>
                            <th>End date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody class="table-border-bottom-0">
                        @foreach (var homework in Model)
                        {
                            <tr>
                                <td>@homework.homework_id</td>
                                <td>@homework.title</td>
                                <td>@homework.description</td>
                                <td>@homework.startdate.ToString("yyyy-MM-dd")</td>
                                <td>@homework.enddate.ToString("yyyy-MM-dd")</td>
                                <td></td>
                                <td>
                                    <a href="~/HomeworkHub/Edit?homeworkid=@homework.homework_id" class="btn btn-primary mb-3"> Edit </a>
                                    @* <a href="~/HomeworkHub/Delete?homeworkid=@homework.homework_id" class="btn btn-primary mb-3"> Delete </a> *@

                                    <form method="post" asp-controller="HomeworkHub" asp-action="DeleteHomework" asp-route-homeworkid="@homework.homework_id" onsubmit="return confirm('Are you sure you want to delete this homework?');">
                                        <button type="submit" class="btn btn-danger mb-3">Delete</button>
                                    </form>
                                     
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->
    </div>
    <!-- / Content -->


@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["StaffTitle"] = "Homepage";
}

@model Singlearn.Models.Entities.Submission
@using System
@using System.Web


<!-- Content wrapper -->
<div style="padding-top: 110px;" class="content-wrapper">
    <div class="card-body text-center" style="width:900px; height:600px">
        <!-- Use iframe to embed PDF -->
        @if (Model.annotatedFilename != null && Model.annotatedFilename.Length > 0)
        {
            <iframe src="data:application/pdf;base64,@Convert.ToBase64String(Model.annotatedFilename)" width="100%" height="600px" type="application/pdf"></iframe>
        }
        else
        {
            <p>NO PDF available</p>
        }
        <br />
        

    </div>
    
    <div class="form-wrapper">

        <div class="form-group mt-4">
            <label for="grade">Grade</label>
            <input type="type" class="form-control" id="grade" name="grade" value="@Model.grade" disabled>
        </div>

        <div class="form-group mt-4">
            <label for="feedback">Feedback</label>
            <textarea class="form-control" id="feedback" name="feedback" rows="3" disabled>@Model.feedback</textarea>
        </div>

    </div>
</div>
<!-- / Content -->
@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["StaffTitle"] = "Homepage";
    int subjectId = ViewData["SubjectId"] != null ? (int)ViewData["SubjectId"] : 0;

}

@model Singlearn.Models.Entities.Homework;

<h2>Delete Homework</h2>

<div>
    <h4>Are you sure you want to delete this homework?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Homework ID:
        </dt>
        <dd class="col-sm-10">
            @Model.homework_id
        </dd>
        <dt class="col-sm-2">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Model.title
        </dd>
        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Model.description
        </dd>
        <dt class="col-sm-2">
            Start Date:
        </dt>
        <dd class="col-sm-10">
            @Model.startdate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            End Date:
        </dt>
        <dd class="col-sm-10">
            @Model.enddate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Attachment:
        </dt>
        <dd class="col-sm-10">
            @Model.attachment
        </dd>
    </dl>

    <form asp-action="DeleteHomework" asp-controller="HomeworkHub" method="post">
        <input type="hidden" name="homeworkid" value="@Model.homework_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
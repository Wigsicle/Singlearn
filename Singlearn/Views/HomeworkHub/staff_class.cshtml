@{
    Layout = "~/Views/Shared/_LayoutFixed2.cshtml";
    ViewData["StaffTitle"] = "Homepage";
    int homeworkId = ViewData["HomeworkId"] != null ? (int)ViewData["HomeworkId"] : 0;
}

@model List<Singlearn.Models.ClassesViewModel>

<!-- Content wrapper -->
<div style="padding-top: 110px;" class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y" style="width:200%">
        <h1 class="fw-bold py-3 mb-2">Class</h1>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a asp-action="staff_submission" asp-route-classId="@item.class_id" asp-route-homeworkId="@ViewData["HomeworkId"]" >@Html.DisplayFor(modelItem => item.name)</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!--/ Basic Bootstrap Table -->
    </div>
</div>
<!-- / Content -->

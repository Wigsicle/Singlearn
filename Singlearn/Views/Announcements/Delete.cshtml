@model Singlearn.Models.Entities.Announcement

@{
    ViewData["Title"] = "Delete";
}
@inject IHttpContextAccessor HTTPCONTEXTACCESSOR;
@{
    var staffId = HTTPCONTEXTACCESSOR.HttpContext.Session.GetString("staff_id");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Announcement</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f7f7f9; /* Light pastel background color */
        }

        .main-container {
            padding: 150px;
        }

        .header-container {
            text-align: left;
            margin-right: 20px;
            display: flex;
            align-items: center; /* Center vertically */
            height: 100%; /* Full height of parent */
        }

        .details-container {
            background-color: #ffffff; /* White background for the card */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px; /* Control width */
            margin: auto; /* Center horizontally */
        }

        .details-header {
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .details-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .details-label {
            font-weight: bold;
            color: #333;
        }

        .details-value {
            color: #555;
        }

        .actions {
            margin-top: 20px;
            text-align: center;
        }

            .actions input, .actions a {
                margin: 0 10px;
                color: #fff;
                text-decoration: none;
            }

            .actions a {
                background-color: #007bff;
                padding: 10px 20px;
                border-radius: 5px;
            }

                .actions a:hover {
                    text-decoration: underline;
                }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="details-container">
            <div class="details-header">
                <h1>Delete Announcement</h1>
                <h4>@Model.title</h4>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.subject_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.subject_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.staff_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.staff_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.class_id):</span>
                <span class="details-value">@Html.DisplayFor(model => model.class_id)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.description):</span>
                <span class="details-value">@Html.DisplayFor(model => model.description)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.image):</span>
                <span class="details-value">@Html.DisplayFor(model => model.image)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.date):</span>
                <span class="details-value">@Html.DisplayFor(model => model.date)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.url):</span>
                <span class="details-value">@Html.DisplayFor(model => model.url)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.category):</span>
                <span class="details-value">@Html.DisplayFor(model => model.category)</span>
            </div>
            <div class="details-section">
                <span class="details-label">@Html.DisplayNameFor(model => model.status):</span>
                <span class="details-value">@Html.DisplayFor(model => model.status)</span>
            </div>
            <div class="actions">
                <form asp-action="Delete" style="display: inline;">
                    <input type="hidden" asp-for="announcement_id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

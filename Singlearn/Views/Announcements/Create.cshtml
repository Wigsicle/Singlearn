@using System.Security.Claims
@model Singlearn.ViewModels.AnnouncementViewModel

@{
    ViewData["Title"] = "Create";
}
@inject IHttpContextAccessor HTTPCONTEXTACCESSOR;
@{
    var staffId = HTTPCONTEXTACCESSOR.HttpContext.Session.GetString("staff_id");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Announcement</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        body {
            background-color: #f7f7f9; /* Light pastel background color */
        }

        .main-container {
            padding: 150px;
        }

        .header-container {
            text-align: left;
            margin-right: 20px;
            display: flex;
            align-items: center; /* Center vertically */
            height: 100%; /* Full height of parent */
        }

        .form-container {
            background-color: #ffffff; /* White background for the form */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            flex: 1;
            max-width: 500px; /* Smaller width */
        }

        .btn-primary {
            display: block;
            width: 100%;
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .content-wrapper {
            display: flex;
            align-items: center; /* Center vertically */
            justify-content: center; /* Center horizontally */
        }

        ::placeholder {
            color: lightgray;
            opacity: 1; /* Firefox */
        }

        .form-group.hidden {
            display: none;
        }

        .form-group {
            margin-bottom: 20px; /* Add space between form groups */
        }

        .checkbox-group {
            display: flex;
            justify-content: space-between;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="content-wrapper">
            <div class="header-container">
                <div>
                    <h1>Create</h1>
                    <h4>Announcement</h4>
                </div>
            </div>
            <div class="form-container">
                <form asp-action="Create" asp-controller="Announcements" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Insert your Title Here" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" placeholder="Insert your Description Here"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" class="form-control" placeholder="Insert your Image URL Here" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Url" class="control-label"></label>
                        <input asp-for="Url" class="form-control" placeholder="Insert your URL Here" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" class="form-control" id="categoryDropdown">
                            <option value="News">News</option>
                            <option value="Events">Events</option>
                            <option value="Subject">Subject</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="Visible">Visible</option>
                            <option value="Non-Visible">Non-Visible</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden" id="subjectGroup">
                        <label asp-for="SubjectId" class="control-label"></label>
                        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects" readonly></select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden" id="classGroup">
                        <label class="control-label">Classes</label>
                        <div id="classCheckboxes">
                            <!-- Checkboxes will be inserted here via AJAX -->
                        </div>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StaffId" class="control-label"></label>
                        <input asp-for="StaffId" class="form-control" value="@staffId" readonly />
                        <span asp-validation-for="StaffId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="back-link">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            $(document).ready(function () {
                // Hide class group by default
                $('#classGroup').hide();
                $('#subjectGroup').hide();
                $('teacherGroup').hide();

                // Show or hide class group based on selected category
                $('#categoryDropdown').change(function () {
                    if ($(this).val() === 'Subject') {
                        $('#subjectGroup').show();
                        $('#classGroup').show();
                    } else {
                        $('#subjectGroup').hide();
                        $('#classGroup').hide();
                    }
                });

                $(document).ready(function () {
                    var staffId = '@ViewData["StaffId"]';
                    $.getJSON('/Announcements/GetClassesByStaff', { staff_id: staffId }, function (data) {
                        var select = $('#class_id');
                        $.each(data, function (index, item) {
                            select.append($('<option/>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
                });

                $('#staffDropdown').change(function () {
                    var staffId = $(this).val();
                    $.ajax({
                        url: '@Url.Action("GetClassesByStaff", "Announcements")',
                        type: 'GET',
                        data: { staff_id: staffId },
                        success: function (data) {
                            var classCheckboxes = $('#classCheckboxes');
                            classCheckboxes.empty();
                            $.each(data, function (index, value) {
                                classCheckboxes.append(
                                    $('<div>').append(
                                        $('<input>').attr({
                                            type: 'checkbox',
                                            name: 'class_id',
                                            value: value.value
                                        }).addClass('form-check-input')
                                    ).append(
                                        $('<label>').text(value.text).addClass('form-check-label')
                                    ).addClass('form-check')
                                );
                            });
                        }
                    });
                });
            });
        </script>
    }
</body>
</html>
